{
  "name": "@orochi-network/wallet-connector",
  "version": "1.0.1",
  "author": "chiro8x@gmail.com",
  "keywords": [
    "wallet connector",
    "ethereum",
    "smart contract",
    "crypto wallet",
    "react",
    "orochi network"
  ],
  "main": "./build/cjs/index.js",
  "module": "./build/esm/index.js",
  "types": "./build/esm/index.d.ts",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "14.14.31",
    "@types/react": "^17.0.39",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,jsx,ts,tsx",
      "ignore": "node_modules"
    }
  },
  "scripts": {
    "build:esm": "tsc && mkdir -p ./build/esm/static && cp ./src/static/*.* ./build/esm/static",
    "build:cjs": "tsc --module commonjs --outDir build/cjs && mkdir -p ./build/cjs/static && cp ./src/static/*.* ./build/cjs/static",
    "build": "yarn build:esm && yarn build:cjs",
    "dev": "npx nodemon -e ts -w ./src -x \"npx ts-node ./src/index.ts\"",
    "demo": "cd ./demo && yarn start",
    "fix": "eslint --config .eslintrc.json --fix --ignore-path .eslintignore ./src/**/*.ts",
    "check": "npm run fix && npx prettier --check --write ./src/**/* && npm run build",
    "release": "npm run check && node ./devel.js && npm publish --access public"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DK-DAO/wallet-connector.git"
  },
  "bugs": {
    "url": "https://github.com/DK-DAO/wallet-connector/issues"
  },
  "homepage": "https://github.com/DK-DAO/wallet-connector#readme",
  "files": [
    "build"
  ],
  "dependencies": {
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.3.1",
    "@mui/material": "^5.4.0",
    "@walletconnect/client": "^1.7.1",
    "@walletconnect/qrcode-modal": "^1.7.1",
    "ethers": "^5.5.4",
    "safe-buffer": "^5.2.1"
  }
}